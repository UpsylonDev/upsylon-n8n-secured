# Docker Compose Environment Variables
# Copiez ce fichier en .env et personnalisez les valeurs

# n8n Configuration
# Project Configuration
PROJECT_NAME=n8n-secure
N8N_PORT=3000

N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=ChangeThisPassword123!
GENERIC_TIMEZONE=Europe/Paris
WEBHOOK_URL=http://localhost:3000

# Security & Future-proofing
N8N_RUNNERS_ENABLED=true
N8N_BLOCK_ENV_ACCESS_IN_NODE=false
N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# n8n-runner Configuration
# DEFAULT_PROJECT_PATH=/chemin/vers/votre/projet
MAX_BUFFER=10485760
